<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ButtonSlider.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ButtonSlider"
    Shell.FlyoutBehavior="Flyout"
    Title="ButtonSlider">

    <TabBar Title="home">
        <Tab Title="home" Icon="letter_red.png">
            <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        </Tab>

        <Tab Title="slide" Icon="letter_red.png">
            <ShellContent
            Title="Slider"
            ContentTemplate="{DataTemplate local:SliderPage}"
            Route="SliderPage" />
        </Tab>

        <Tab Title="button" Icon="letter_red.png">
            <ShellContent
            Title="Buttons"
            ContentTemplate="{DataTemplate local:ButtonPage}"
            Route="ButtonPage" />
        </Tab>
    </TabBar>
</Shell>
